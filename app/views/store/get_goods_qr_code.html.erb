<style type="text/css">
    table {
        border-width: 0;
        border-style: none;
        border-color: #00f;
        border-collapse: collapse;
    }

    td {
        border-width: 0;
        border-style: none;
        border-color: #00f;
        border-collapse: collapse;
        padding: 0;
        margin: 0;
        width: 4px;
        height: 4px;
    }

    td.black {
        background-color: #000;
    }

    td.white {
        background-color: #fff;
    }
</style>

<% if @goods %>
    <% @qr_code = render_qr_code(@goods.qr_code) %>
    <table>
      <% @qr_code.modules.each_index do |x| %>
          <tr>
            <% @qr_code.modules.each_index do |y| %>
                <% if @qr_code.dark?(x, y) %>
                    <td class="black"></td>
                <% else %>
                    <td class="white"></td>
                <% end %>
            <% end %>
          </tr>
      <% end %>
      <tr>
        <td align="center" colspan="<%= @qr_code.modules.size %>"><br/><b><%= @goods.string_id %></b></td>
      </tr>
    </table>
<% end %>
